# ============================================
# Cochl.sense API 설정
# ============================================
# Cochl.sense에서 발급받은 API 키
# 발급: https://dashboard.cochl.ai/
# ⚠️ API 키가 없으면 Mock 클라이언트가 자동으로 사용됩니다 (개발/테스트용)
COCHL_API_KEY=your_cochl_api_key_here

# Cochl API 엔드포인트 (선택 사항, 기본값 사용 권장)
# COCHL_API_URL=https://api.cochl.ai/v1

# ============================================
# AI 분석 설정 (선택 사항)
# ============================================
# Claude API 키 (Anthropic Console에서 발급)
# 발급: https://console.anthropic.com/settings/keys
# ⚠️ 설정하지 않으면 기본 분석만 수행됩니다 (LLM 해석 없음)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# Zapier Webhook 설정
# ============================================
# Zapier에서 생성한 Webhook URL을 입력하세요
# 이 URL로 긴급 상황 알림이 전송됩니다
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxx/yyyyy/

# ============================================
# 서버 설정
# ============================================
# 서버가 실행될 포트 번호 (기본값: 8000)
SERVER_PORT=8000

# 서버가 실행될 호스트 (기본값: 0.0.0.0 - 모든 IP에서 접속 가능)
SERVER_HOST=0.0.0.0

# ============================================
# 보안 설정
# ============================================
# 긴급 상황으로 판단하는 기준 점수 (1-10 사이, 기본값: 7)
EMERGENCY_THRESHOLD=7

# ============================================
# CORS 설정
# ============================================
# CORS 허용 오리진 (쉼표로 구분)
# 개발 환경 (기본값)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 프로덕션 환경 예시 (실제 도메인으로 변경)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,http://localhost:5173

# ============================================
# 파일 업로드 설정
# ============================================
# 최대 파일 크기 (MB)
MAX_FILE_SIZE_MB=50

# 허용되는 오디오 형식 (쉼표로 구분)
ALLOWED_AUDIO_FORMATS=mp3,wav,ogg,m4a

# 허용되는 비디오 형식 (쉼표로 구분)
ALLOWED_VIDEO_FORMATS=mp4,webm,avi

# 작업 만료 시간 (초, 기본값: 3600 = 1시간)
TASK_EXPIRY_SECONDS=3600

# ============================================
# 사용 방법
# ============================================
# 1. 이 파일을 복사해서 '.env' 파일로 저장하세요
# 2. 각 항목의 실제 값을 입력하세요
# 3. .env 파일은 절대 공유하거나 Git에 업로드하지 마세요!
